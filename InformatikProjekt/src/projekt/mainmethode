package projekt;

import java.util.Scanner;

public class Projektmain {
	public static void main (String []args) {
		Scanner sc= new Scanner(System.in);
		t Alice= new t(100,100);
		t Jason= new t(75,125);
		System.out.println("Welche Charakter mochten Sie wahlen?");
		System.out.println("1. Alice");
		System.out.println("2. Jason");
		int p=sc.nextInt();//die Entscheidung von dem Spieler
		if(p==1) {
			System.out.println("Sie haben Alice entschiedet");
		Alice.wand();
		int x=Alice.wand();//x ist von der wand-methode, wenn der Spieler in der ersten Herausforderung verliert, dann x++
		if(x==0) {//wenn x=0, das bedeutet, der Spieler hat noch nicht verloren und kann nachste Herausforderung spielen
		Alice.Seilschwingen();
		int n1=Alice.Seilschwingen();//n1 hat die gleiche Funktion wie x
		if (n1==0) {
			Alice.weg();
			int n=Alice.weg();
		}
		}
		
		}else {
			System.out.println("Sie haben Jason entschiedet");
			Jason.wand();
			Jason.Seilschwingen();
		}
		
	}
}
